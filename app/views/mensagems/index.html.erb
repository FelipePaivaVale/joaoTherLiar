            <p class="card-text"><%= mensagem.conteudo %></p>
            <p class="card-text">
              <small class="text-muted">
                <%= time_ago_in_words(mensagem.created_at) %> atrÃ¡s
              </small>
            </p>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>